<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#181819"
        android:orientation="vertical">

        <com.cloud.coms.themes.ThemeTextView
            android:id="@+id/head_ttv"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="#ffffff"
            app:ttv_backgroundColor="@color/color_041d29"
            app:ttv_bottomLineColor="@color/color_041d29"
            app:ttv_isShowBottomLine="true"
            app:ttv_leftViewText="取消"
            app:ttv_leftViewTextColor="@color/color_ffffff"
            app:ttv_leftViewTextSize="@dimen/font_size_16"
            app:ttv_rightViewText="完成(0/9)"
            app:ttv_rightViewTextColor="@color/color_ffffff"
            app:ttv_titleSize="16sp" />

        <FrameLayout
            android:id="@+id/image_grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</layout>